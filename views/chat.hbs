<h1>Добро пожаловать в чат, {{username}}!</h1>

<section id="chat">
</section>

<form id="send-form">
  <div class="form-group">
    <label for="username">Кому:</label>
    <select id="username" name="username" class="form-control">
      <option value="">Всем в чате</option>
      {{#each users}}
      <option value="{{id}}">{{username}}</option>
      {{/each}}
    </select>
  </div>
  <div class="form-group">
    <label for="message">Сообщение:</label>
    <input id="message" name="message" type="text" class="form-control" required autocomplete="off">
  </div>
  <button name="sendButton" type="submit" class="btn btn-primary">Отправить</button>
</form>

{{> chat_message_template}}